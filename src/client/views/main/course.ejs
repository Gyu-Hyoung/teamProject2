<%-include('../components/header.ejs') %>
<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=14b5663f262c196836978253035f9319"></script>
<script src="/client/js/course.js" defer></script>
</head>
<body>

  <div class="album-title">
    <h1>Powerful Photo Tour</h1>
    <div class="album-toggle"><i class="fa-solid fa-bars"></i></div>
  </div>

  <!-- <nav class="nav-container">
    <p class="nav-title theme-font">용계역 여행</p>
    <div class="nav-sub-title">코스안내</div>
  </nav> -->
  <div class="loading-wrap hidden">
    <!-- <div class="loading loading--full-height"></div> -->
    <div class="spinner">
      <div class="curve_top_left"></div>
      <div class="curve_top_right"></div>
      <div class="curve_bottom_left"></div>
      <div class="curve_bottom_right"></div>
      <div class="center_circle"></div>
    </div>
  </div>
  
    <div class="navMenu">
      <ul>
        <li class='currentPosition'>
          <div><i class="fa-solid fa-location-crosshairs"></i></div>
          <div>현재위치</div>
        </li>
        <li class='photoZone'>
          <div><i class="fa-solid fa-camera"></i></div>
          <div>포토존</div>
        </li>
        <li class='tourSpot'>
          <div><i class="fa-solid fa-route"></i></i></div>
          <div>관광지</div>
        </li>
        <li class='food'>
          <div><i class="fa-solid fa-utensils"></i></div>
          <div>대구맛집</div>
        </li>
        <li class='festival'>
          <div><i class="fa-solid fa-utensils"></i></div>
          <div>축제</div>
        </li>
        
      </ul>
    </div>
    
    <div class="map-container">
      <div id="map"></div>
    </div>
    

    <section class="place-list">
      <ul>      
      <% for (let i=0; i < course.length; i++) {%>
        <li class="course"
        data-name="<%= course[i].name %>" 
        data-visited="<%= course[i].visited %>" 
        data-address="<%= course[i].address %>"
        data-category="<%= course[i].category %>"
        >
          <h2><%= course[i].name %><span><%= course[i].mode %></span></h2>
          <h3><%= course[i].address %></h3>
          <div class='tag'>
            <% for(let j=0 ; j < course[i].character.length; j++) {%>
            <span><%= course[i].character[j] %></span>
            <% } %>
          </div>
          <h3><span>6.9km</span>블로그리뷰<span>5,983</span></h3>
          <div>
            <span><i class="fa-regular fa-star"></i></span><span><i class="fa-solid fa-arrow-up-from-bracket"></i></span>
          </div>
        </li>
        <% } %>
      </ul>
    </section>

<%-include('../components/footer.ejs') %>